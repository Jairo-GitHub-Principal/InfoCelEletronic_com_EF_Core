<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoCelEletronic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background:#2F4F4F;">
    <div class="container-fluid ">



        <div class="row   p-5" style="background:#008080;">





            <div class="col-sm-12  col-md-12  col-lg-12 nav justify-content-center   ">








                <!--***********************************************************************************************************************-->



                <nav class="navbar navbar-expand-lg navbar-light   ">

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"> </span>
                    </button>







                    <div class="collapse navbar-collapse" id="navbarNav">



                        <ul class="navbar-nav text-center nav nav-pills nav-fill  font-weight "
                            style="font-size: 18px ; text-shadow:1px 1px 2px  black;">



                            <li class="nav-item active mr-1">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>


                            <li class="nav-item mr-1">
                                <a class="nav-link text-light" asp-area="" asp-controller="Servicos"
                                    asp-action="Servicos">Serviços</a>
                            </li>


                            <li class="nav-item mr-1">
                                <a class="nav-link text-light" asp-area="" asp-controller="cliente"
                                    asp-action="CadastroCliente">Cadastro</a>
                            </li>




                            <!--*******************************************************ADM***************************************************************-->
                          

                              
                                    <li class="nav-item mr-1">
                                        <a class="nav-link text-light" asp-area="" asp-controller="cliente"
                                    asp-action="LoginCliente">Login</a>
                                    </li>

                               


                                    <li class="nav-item mr-1">
                                        <a class="nav-link text-light" asp-area="" asp-controller="cliente"
                                    asp-action="ListarCliente">Clientes</a>
                                    </li>

                                    <li class="nav-item mr-1">
                                        <a class="nav-link text-light" asp-area="" asp-controller="cliente"
                                    asp-action="logOut">Sair</a>
                                    </li>







                                    <li class="nav-item mr-1">
                                        <a class="nav-link text-light" asp-area="" asp-controller="Servicos"
                                    asp-action="listarservicos">listar serviços</a>
                                    </li>
                                    <li>

                                       
                                    </li>
                              


                          
                               



                               


                               

                                    
                                


                           

                        </ul>

                    </div>




                </nav>



            </div>
            <!--fecha col-->

        </div>
        <!--fecha row-->









        <div class=" row " style="background:#2F4F4F; ">
            <div class="col-12">
                <main role="main" class="mb-3">
                    @RenderBody()
                </main>
            </div>

        </div>



    </div>
    <div class="container-fluid footer border" style="background:#008080;">
        <div class="row ">
            <div class="col-sm-12 col-md-12 col-ag-12 ">
                <footer class=" text-center   " >
                    <!-- Copyright -->
                    <div>
                        &copy; 2022 - InfoCelEletronics - <a asp-area="" asp-controller="Home"
                            asp-action="Index">Home</a>
                    </div>
                    <!-- Copyright -->
                </footer>
            </div>
        </div>
    </div>











    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
